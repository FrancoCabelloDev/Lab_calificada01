<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="6"
    tools:context=".ui.Ejercicio01Activity">

    <!-- Título Formulario -->
    <TextView
        android:id="@+id/textViewFormulario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="@string/formulario"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Nombre Alumno -->
    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: 'Nombre Alumno'"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Apellido Alumno -->
    <TextView
        android:id="@+id/textViewApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido: 'Apellido Alumno'"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Correo Alumno -->
    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo: 'Correo Alumno'"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <!-- Campo Nombre y Apellido (EditTexts en la misma fila) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray"
            android:importantForAutofill="yes"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/editTextApellido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/apellido"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray"
            android:importantForAutofill="yes"/>
    </LinearLayout>

    <!-- Campo Correo (EditText solo) -->
    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray"
        android:importantForAutofill="yes"
        android:layout_marginBottom="8dp"/>

    <!-- Botón Registrar -->
    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="Registrar"
        android:textSize="18sp"/>

</LinearLayout>
